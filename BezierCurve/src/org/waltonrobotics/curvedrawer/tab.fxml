<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
  fx:controller="org.waltonrobotics.curvedrawer.controller.CurveTabController">
  <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.5" fx:id="splitPane">
    <Pane onMouseClicked="#createPoint" fx:id="pane"/>
    <TreeTableView editable="true" fx:id="pathTable">
    </TreeTableView>
  </SplitPane>
  <HBox alignment="CENTER" spacing="5.0">
    <VBox.margin>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </VBox.margin>
    <TextField promptText="SmartDashboard Key" fx:id="smartDashboardKeyField"/>
    <TextField promptText="Enter SmartDashboard ip Adress" fx:id="ipAddressTextField"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Button disable="true" mnemonicParsing="false" onAction="#sendCurveToSmartDashboard"
      text="Send to SmartDashboard" fx:id="sendButton"/>
  </HBox>
</VBox>
