<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
  fx:controller="org.waltonrobotics.curvedrawer.controller.CurveTabController">
  <HBox VBox.vgrow="ALWAYS" onMouseClicked="#viewCreatePath" fx:id="creationPane">
    <ScrollPane HBox.hgrow="ALWAYS" fitToHeight="true" fitToWidth="true"
      onMouseClicked="#createPoint" prefViewportHeight="430.0" prefViewportWidth="429.0">
      <Pane fx:id="drawingPane"/>
    </ScrollPane>
    <ScrollPane HBox.hgrow="NEVER" prefViewportHeight="430.0">
      <Accordion fx:id="pathPane"/>
    </ScrollPane>
  </HBox>
  <HBox alignment="CENTER" spacing="5.0">
    <VBox.margin>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </VBox.margin>
    <TextField promptText="SmartDashboard Key" fx:id="smartDashboardKeyField"/>
    <TextField promptText="Enter SmartDashboard ip Adress" fx:id="ipAddressTextField"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Button disable="true" mnemonicParsing="false" onAction="#sendCurveToSmartDashboard"
      text="Send to SmartDashboard" fx:id="sendButton"/>
  </HBox>
</VBox>
