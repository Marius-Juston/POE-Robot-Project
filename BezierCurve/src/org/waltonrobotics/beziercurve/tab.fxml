<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
  fx:controller="org.waltonrobotics.beziercurve.controller.BezierTabContentController">
  <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.5" fx:id="splitPane">
    <Pane onMouseClicked="#createPoint" fx:id="anchorPane"/>
    <TableView editable="true" fx:id="pointTable">
      <columns>
        <TableColumn prefWidth="75.0" text="Point" fx:id="pointNameColumn"/>
        <TableColumn prefWidth="75.0" text="X" fx:id="pointCenterXColumn"/>
        <TableColumn prefWidth="75.0" text="Y" fx:id="pointCenterYColumn"/>
      </columns>
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
    </TableView>
  </SplitPane>
  <HBox alignment="CENTER" spacing="5.0">
    <VBox.margin>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </VBox.margin>
    <TextField promptText="SmartDashboard Key" fx:id="smartDashboardKeyField"/>
    <TextField promptText="Enter SmartDashboard ip Adress" fx:id="ipAddressTextField"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Button disable="true" mnemonicParsing="false" onAction="#sendBezierCurveToSmartDashboard"
      text="Send to SmartDashboard" fx:id="sendButton"/>
  </HBox>
</VBox>
