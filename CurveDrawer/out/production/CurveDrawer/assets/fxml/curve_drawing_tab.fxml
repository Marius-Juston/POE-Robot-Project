<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" alignment="CENTER" onKeyPressed="#handleKeyPresses" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.curvedrawer.controller.CurveDrawerTabController">
    <padding>
        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
    </padding>
    <SplitPane dividerPositions="1.0" VBox.vgrow="ALWAYS">
        <Pane fx:id="pane" onMouseClicked="#createPoint" onMouseDragged="#pan" onMousePressed="#getMouseLocation" prefHeight="500.0" prefWidth="500.0" HBox.hgrow="ALWAYS">
            <Pane fx:id="drawingPane" />
        </Pane>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" minWidth="0.0" prefViewportHeight="430.0">
            <Accordion fx:id="pathsViewer" />
        </ScrollPane>
    </SplitPane>
    <Button fx:id="sendButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#sendCurveToSmartDashboard" text="Send to SmartDashboard" />
</VBox>
